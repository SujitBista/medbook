// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               String   @id @default(uuid())
  email            String   @unique
  password         String
  role             UserRole @default(PATIENT)
  mustResetPassword Boolean @default(false)
  emailVerified    Boolean  @default(true)
  firstName        String
  lastName         String
  phoneNumber      String
  profilePictureUrl String?
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  // Relations
  doctor Doctor?
  patientAppointments Appointment[] @relation("PatientAppointments")
  patientPayments Payment[] @relation("PatientPayments")
  scheduleExceptionsCreated ScheduleException[]

  @@map("users")
}

model Doctor {
  id                String   @id @default(uuid())
  userId            String   @unique
  specialization    String?
  bio               String?
  licenseNumber     String?
  address           String?
  city              String?
  state             String?
  zipCode           String?
  yearsOfExperience Int?
  education         String?
  profilePictureUrl String?
  stripeAccountId   String?  // Stripe Connect account ID for payouts
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  availabilities Availability[]
  appointments Appointment[]
  slotTemplate SlotTemplate?
  slots Slot[]
  commissionSettings DoctorCommissionSettings?
  payments Payment[]
  commissions Commission[]
  scheduleExceptions ScheduleException[]

  @@map("doctors")
}

model Availability {
  id            String   @id @default(uuid())
  doctorId      String
  startTime     DateTime
  endTime       DateTime
  dayOfWeek     Int?     // 0-6 (Sunday-Saturday), null for one-time slots
  isRecurring   Boolean  @default(false)
  validFrom     DateTime? // Start date for recurring schedules
  validTo       DateTime? // End date for recurring schedules
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Relations
  doctor Doctor @relation(fields: [doctorId], references: [id], onDelete: Cascade)
  appointments Appointment[]
  slots Slot[]

  @@index([doctorId])
  @@index([startTime])
  @@index([endTime])
  @@map("availabilities")
}

model Appointment {
  id            String            @id @default(uuid())
  patientId     String
  doctorId      String
  availabilityId String?           // Optional: link to specific availability slot
  slotId        String?            @unique // Link to specific slot (unique for one-to-one)
  paymentId     String?            @unique // Link to payment (optional for backward compatibility)
  startTime     DateTime
  endTime       DateTime
  status        AppointmentStatus  @default(PENDING)
  notes         String?
  isArchived    Boolean            @default(false)
  createdAt     DateTime          @default(now())
  updatedAt     DateTime          @updatedAt

  // Relations
  patient User @relation("PatientAppointments", fields: [patientId], references: [id], onDelete: Cascade)
  doctor Doctor @relation(fields: [doctorId], references: [id], onDelete: Cascade)
  availability Availability? @relation(fields: [availabilityId], references: [id], onDelete: SetNull)
  slot Slot? @relation(fields: [slotId], references: [id], onDelete: SetNull)
  payment Payment?
  reminder Reminder?
  commissions Commission[]

  @@index([patientId])
  @@index([doctorId])
  @@index([startTime])
  @@index([endTime])
  @@index([status])
  @@index([isArchived])
  @@index([endTime, isArchived]) // Composite index for archiving queries
  @@index([paymentId])
  @@map("appointments")
}

enum UserRole {
  PATIENT
  DOCTOR
  ADMIN
}

enum AppointmentStatus {
  PENDING
  CONFIRMED
  CANCELLED
  COMPLETED
}

model SlotTemplate {
  id                String   @id @default(uuid())
  doctorId          String   @unique
  durationMinutes   Int      @default(30)  // Slot duration (15, 30, 60, etc.)
  bufferMinutes     Int      @default(0)    // Buffer between slots
  advanceBookingDays Int     @default(30)   // How far ahead can patients book
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  // Relations
  doctor Doctor @relation(fields: [doctorId], references: [id], onDelete: Cascade)

  @@map("slot_templates")
}

model Slot {
  id            String     @id @default(uuid())
  doctorId      String
  availabilityId String?
  startTime     DateTime
  endTime       DateTime
  status        SlotStatus @default(AVAILABLE)
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt

  // Relations
  doctor Doctor @relation(fields: [doctorId], references: [id], onDelete: Cascade)
  availability Availability? @relation(fields: [availabilityId], references: [id], onDelete: SetNull)
  appointment Appointment?

  @@index([doctorId])
  @@index([startTime])
  @@index([endTime])
  @@index([status])
  @@unique([doctorId, startTime, endTime])  // Prevent duplicate slots
  @@map("slots")
}

enum SlotStatus {
  AVAILABLE    // Available for booking
  BOOKED       // Has an appointment
  BLOCKED      // Doctor blocked this slot
  CANCELLED    // Appointment cancelled, slot available again
}

model Reminder {
  id            String   @id @default(uuid())
  appointmentId String   @unique
  scheduledFor  DateTime // When to send the reminder (24 hours before appointment)
  sentAt        DateTime? // When the reminder was actually sent
  cancelledAt   DateTime? // When the reminder was cancelled
  reminderType  ReminderType @default(TWENTY_FOUR_HOUR)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Relations
  appointment Appointment @relation(fields: [appointmentId], references: [id], onDelete: Cascade)

  @@index([scheduledFor])
  @@index([appointmentId])
  @@map("reminders")
}

enum ReminderType {
  TWENTY_FOUR_HOUR  // 24 hours before appointment
  ONE_HOUR          // 1 hour before appointment (optional)
}

model Payment {
  id                    String        @id @default(uuid())
  appointmentId         String        @unique
  patientId             String
  doctorId              String
  amount                Decimal       @db.Decimal(10, 2)
  currency              String        @default("usd")
  status                PaymentStatus @default(PENDING)
  stripePaymentIntentId String        @unique
  stripeChargeId        String?
  refundedAmount        Decimal       @default(0) @db.Decimal(10, 2)
  refundReason          String?
  metadata              Json?
  createdAt             DateTime      @default(now())
  updatedAt             DateTime      @updatedAt

  // Relations
  appointment Appointment @relation(fields: [appointmentId], references: [id], onDelete: Cascade)
  patient User @relation("PatientPayments", fields: [patientId], references: [id], onDelete: Cascade)
  doctor Doctor @relation(fields: [doctorId], references: [id], onDelete: Cascade)
  commission Commission?

  @@index([patientId])
  @@index([doctorId])
  @@index([status])
  @@index([appointmentId])
  @@index([stripePaymentIntentId])
  @@map("payments")
}

enum PaymentStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
  REFUNDED
  PARTIALLY_REFUNDED
}

model Commission {
  id                  String            @id @default(uuid())
  paymentId           String            @unique
  appointmentId      String
  doctorId            String
  appointmentAmount   Decimal           @db.Decimal(10, 2)
  commissionRate      Decimal           @db.Decimal(5, 4) // e.g., 0.1000 for 10%
  commissionAmount    Decimal           @db.Decimal(10, 2)
  doctorPayoutAmount Decimal            @db.Decimal(10, 2)
  status              CommissionStatus  @default(PENDING)
  stripeTransferId   String?
  paidAt              DateTime?
  createdAt           DateTime          @default(now())
  updatedAt           DateTime          @updatedAt

  // Relations
  payment Payment @relation(fields: [paymentId], references: [id], onDelete: Cascade)
  appointment Appointment @relation(fields: [appointmentId], references: [id], onDelete: Cascade)
  doctor Doctor @relation(fields: [doctorId], references: [id], onDelete: Cascade)

  @@index([doctorId])
  @@index([appointmentId])
  @@index([paymentId])
  @@index([status])
  @@map("commissions")
}

enum CommissionStatus {
  PENDING
  PAID
  CANCELLED
}

model DoctorCommissionSettings {
  id              String   @id @default(uuid())
  doctorId        String   @unique
  commissionRate  Decimal  @db.Decimal(5, 4) // e.g., 0.1000 for 10%
  appointmentPrice Decimal @db.Decimal(10, 2)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  // Relations
  doctor Doctor @relation(fields: [doctorId], references: [id], onDelete: Cascade)

  @@map("doctor_commission_settings")
}

// One-time scheduling exceptions: holiday/closure (unavailable) or extra hours (available)
model ScheduleException {
  id         String   @id @default(uuid())
  doctorId   String?  // null = applies to all doctors (scope ALL_DOCTORS)
  dateFrom   DateTime // YYYY-MM-DD start
  dateTo     DateTime // YYYY-MM-DD end (same as dateFrom for single day)
  startTime  String?  // HH:mm, null = full day
  endTime    String?  // HH:mm, null = full day
  type       ScheduleExceptionType // AVAILABLE (extra hours) or UNAVAILABLE (holiday/closure)
  reason     String   // HOLIDAY, LEAVE, EXTRA_HOURS, or custom label
  label      String?  // Optional human-readable reason (e.g. "Health camp")
  createdById String
  createdAt  DateTime @default(now())

  // Relations
  doctor Doctor? @relation(fields: [doctorId], references: [id], onDelete: Cascade)
  createdBy User @relation(fields: [createdById], references: [id], onDelete: Cascade)

  @@index([doctorId])
  @@index([dateFrom, dateTo])
  @@index([type])
  @@map("schedule_exceptions")
}

enum ScheduleExceptionType {
  AVAILABLE   // Extra hours
  UNAVAILABLE // Holiday / closure
}

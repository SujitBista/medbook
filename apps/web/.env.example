# Next.js Web App Configuration

# NextAuth.js Configuration
# Base URL of your application (used for authentication callbacks)
# Default: http://localhost:3000
NEXTAUTH_URL=http://localhost:3000

# NextAuth.js secret key (required)
# Generate a random secret: openssl rand -base64 32
# This is used to encrypt the NextAuth.js JWT and to hash email verification tokens
NEXTAUTH_SECRET=your-secret-key-here

# Public API URL (accessible from browser)
# Default: http://localhost:4000/api/v1
NEXT_PUBLIC_API_URL=http://localhost:4000/api/v1

# Stripe Configuration
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key_here

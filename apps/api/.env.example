# Server Configuration
NODE_ENV=development
PORT=4000
API_URL=http://localhost:4000

# JWT Configuration
# Generate a secure secret with: openssl rand -base64 32
# Required in production - server will crash at startup if missing
JWT_SECRET=your-jwt-secret-here-change-in-production

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://127.0.0.1:3000,http://[::1]:3000
CORS_ALLOW_NO_ORIGIN=false
CORS_ALLOW_NULL_ORIGIN=false

# Database Configuration
# PostgreSQL connection string - must match packages/db/.env
DATABASE_URL=postgresql://user:password@localhost:5432/medbook

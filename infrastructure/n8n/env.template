# n8n Configuration
# Copy this file to .env in the monorepo root directory

# =============================================================================
# BASIC CONFIGURATION
# =============================================================================

# Port n8n runs on (default: 5678)
N8N_PORT=5678

# Host for n8n (default: localhost)
N8N_HOST=localhost

# Protocol (http or https)
N8N_PROTOCOL=http

# Webhook base URL - used for webhook callbacks
# In production, set this to your public URL
WEBHOOK_URL=http://localhost:5678

# Timezone for scheduled workflows
GENERIC_TIMEZONE=UTC

# =============================================================================
# SECURITY (Required for Production)
# =============================================================================

# Encryption key for storing credentials securely
# Generate with: openssl rand -hex 32
# REQUIRED in production, optional in development
N8N_ENCRYPTION_KEY=

# Enable basic authentication (set to true in production)
N8N_BASIC_AUTH_ACTIVE=false

# Basic auth credentials (required if N8N_BASIC_AUTH_ACTIVE=true)
N8N_BASIC_AUTH_USER=
N8N_BASIC_AUTH_PASSWORD=

# =============================================================================
# ENVIRONMENT
# =============================================================================

# Node environment (development, production, test)
NODE_ENV=development

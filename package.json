{
  "name": "medbook",
  "version": "0.1.0",
  "private": true,
  "description": "Doctor Appointment Booking App - Monorepo",
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "clean": "turbo run clean",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "db:generate": "pnpm --filter @app/db db:generate",
    "db:migrate": "pnpm --filter @app/db db:migrate",
    "db:migrate:deploy": "pnpm --filter @app/db db:migrate:deploy",
    "db:migrate:create": "pnpm --filter @app/db db:migrate:create",
    "db:migrate:reset": "pnpm --filter @app/db db:migrate:reset",
    "db:seed": "pnpm --filter @app/db db:seed"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "prettier": "^3.2.5",
    "turbo": "^2.0.0",
    "typescript": "^5.3.3"
  },
  "packageManager": "pnpm@8.15.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}

